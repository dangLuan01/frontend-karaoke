---
import { Image } from 'astro:assets';
import community_bg_shap_one from "../../public/img/new/community_bg_shap_one.png";
import community_bg_shap_two from "../../public/img/new/community_bg_shap_two.png";
import shap_white from "../../public/img/new/shap_white.png";
const domainApi = import.meta.env.PUBLIC_API_GO_URL;
const urlImg    = import.meta.env.PUBLIC_URL_IMG;
const songs     = await fetch(domainApi + '/api/v1/song', {
  method: 'GET',
  headers: {
    'Content-Type': 'application/json',
  }
}).then((response) => response.json());

