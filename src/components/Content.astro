<slot />
<section class="doc_features_area">
    <Image class={"doc_features_shap"} src={shap_white} alt=""/>
    <div class="container">
        <div class="doc_features_inner">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        {songs.data.map((song: any) => (
                        <div class="col-lg-4 col-sm-4">
                            <div class="blog_grid_post shadow-sm wow fadeInUp">
                                <Image src={urlImg + song.thumbnail} alt={song.name} height={250} width={350}/>
                                <div class="grid_post_content">
                                    <div class="post_tag">
                                        <a href="#">{song.author?song.author:'Không có'}</a>
                                        <a class="cat-woocommerce" href="#">{song.singer?song.singer:'Không có'}</a>
                                    </div>
                                    <a href="#">
                                        <h2 class="b_title">{song.name}</h2>
                                    </a>
                                    <p>{song.lyrics}</p>
                                    <div class="media post_author">
                                        <div class="media-body author_text">
                                            <h4>Điệu: {song.tune?song.tune : "Không có"}</h4>
                                            <div class="date">Tone: {song.tone?song.tone : "Không có"}</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        ))}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
